{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["./frontend/mobile/src/*"],
      "@components/*": ["./frontend/mobile/src/components/*"],
      "@screens/*": ["./frontend/mobile/src/screens/*"],
      "@hooks/*": ["./frontend/mobile/src/hooks/*"],
      "@services/*": ["./frontend/mobile/src/services/*"],
      "@utils/*": ["./frontend/mobile/src/utils/*"],
      "@assets/*": ["./frontend/mobile/src/assets/*"],
      "@navigation/*": ["./frontend/mobile/src/navigation/*"],
      "@constants/*": ["./frontend/mobile/src/constants/*"],
      "@contexts/*": ["./frontend/mobile/src/contexts/*"],
      "@types/*": ["./frontend/mobile/src/types/*"],
      "@store/*": ["./frontend/mobile/src/store/*"],
      "@shared/*": ["./shared/*"],
      "@frontend/*": ["./frontend/*"],
      "@backend/*": ["./backend/*"]
    }
  },
  "include": [
    "src",
    "App.tsx",
    "index.js",
    "metro.config.js",
    ".eslintrc.js",
    "babel.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    "build"
  ]
} 