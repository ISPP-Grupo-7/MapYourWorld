{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@assets/*": ["./src/assets/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@constants/*": ["./src/constants/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@types/*": ["./src/types/*"],
      "@store/*": ["./src/store/*"],
      "@shared/*": ["../../shared/*"],
      "@frontend/*": ["../../frontend/*"],
      "@backend/*": ["../../backend/*"]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "babel.config.js",
    "metro.config.js",
    "app.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    "build"
  ]
} 