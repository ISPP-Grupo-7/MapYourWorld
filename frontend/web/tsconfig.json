{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["./frontend/web/src/*"],
      "@components/*": ["./frontend/web/src/components/*"],
      "@pages/*": ["./frontend/web/src/pages/*"],
      "@hooks/*": ["./frontend/web/src/hooks/*"],
      "@services/*": ["./frontend/web/src/services/*"],
      "@utils/*": ["./frontend/web/src/utils/*"],
      "@assets/*": ["./frontend/web/src/assets/*"],
      "@types/*": ["./frontend/web/src/types/*"],
      "@contexts/*": ["./frontend/web/src/contexts/*"],
      "@store/*": ["./frontend/web/src/store/*"],
      "@shared/*": ["./shared/*"],
      "@frontend/*": ["./frontend/*"],
      "@backend/*": ["./backend/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
} 