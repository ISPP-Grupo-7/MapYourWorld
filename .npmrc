# Configuración para NPM en MapYourWorld para Node.js 22.14.0 LTS

# Usar versiones exactas por defecto
save-exact=true

# Usar workspaces
workspaces=true

# Evitar restricciones estrictas que causan problemas en Node 22
strict-peer-dependencies=false
engine-strict=false
legacy-peer-deps=false
auto-install-peers=true

# Asegurar que las versiones de TypeScript y React son coherentes
save-prefix=''

# Performance
fund=false
audit=false

# Preferencias del cliente
prefer-npm=true

# Establecer límite de profundidad en logs
loglevel=error
depth=0

# Configuración para resolver conflictos
resolve-peer-dependencies=true

# Configuración para evitar timeouts
fetch-timeout=300000
network-timeout=100000
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configuración para evitar conflictos entre React y React Native
public-hoist-pattern[]=react
public-hoist-pattern[]=react-dom
public-hoist-pattern[]=react-native
public-hoist-pattern[]=expo*
public-hoist-pattern[]=@types/react
