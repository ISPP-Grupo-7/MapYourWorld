# Configuración para NPM en MapYourWorld

# Usar versiones exactas por defecto
save-exact=true

# Usar workspaces
workspaces=true

# Forzar la instalación de dependencias especificadas en package.json
strict-peer-dependencies=true

# Asegurar que las versiones de TypeScript y React son coherentes
save-prefix=''

# Performance
fund=false
audit=false

# Usar npm como cliente por defecto (evita errores entre equipos)
prefer-npm=true

# Usar node-linker hoisted para evitar duplicados
node-linker=hoisted

# Establecer límite de profundidad en logs
loglevel=warn
depth=0

# Evitar conflictos entre versiones de paquetes
resolve-peer-dependencies=true

# Configurar timeout más alto para evitar problemas con conexiones lentas
fetch-timeout=300000 